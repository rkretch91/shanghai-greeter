<div class="page-background" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= image_path "Shanghai-5.jpg" %>');">
  <div class="login">
    <div class="form-header">
      <h2>Add A New Experience</h2>
    </div>
    <div class="form">
      <%= simple_form_for @experience do |e| %>
      <%= e.error_notification %>
        <div class="form-inputs">
          <%= e.input :name, label: 'Experience Name', error: 'Please specify an experience name' %>
          <%= e.input :description, as: :text, class: "text-field" %>
          <%= e.input :expectation_one %>
          <%= e.input :expectation_two %>
          <%= e.input :expectation_three %>
          <%= e.input :notice %>
          <%= e.input :photos, as: :attachinary %>
        </div>

        <div class="form-actions">
          <%= e.button :submit, "Create", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
